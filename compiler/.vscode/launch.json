{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Extension Host",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/../vscode-ext"
            ],
            "env": {
                "PICOMET_LANG_LSP_SERVER": "../compiler/target/debug/lsp_server"
            },
            "preLaunchTask": "ext:build"
        }
    ],
    "compounds": []
}