{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compiler:build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ext:build",
            "type": "shell",
            "command": "yarn",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "../vscode-ext"
            },
            "group": "build",
            "dependsOn": "compiler:build"
        }
    ]
}