use crate::parse::{MyLexer, LexicalError};
use text_position_rs::CompositePosition;
use crate::tokenize::Token;

grammar<'b>;

pub Term: Token = {
    <n:Num> => n,
    "(" <t:Term> ")" "eos" => t,
};

Num: Token = "num";

extern {
    type Location = usize;
    type Error = LexicalError;

    enum Token {
        "eos" => Token::Eos,
        "num" => Token::DecimalInt,
        "(" => Token::LeftParen,
        ")" => Token::RightParen,
    }
}
