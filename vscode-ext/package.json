{
  "name": "picomet-lang",
  "version": "0.1.0",
  "description": "Picomet-lang support",
  "repository": "https://github.com/vain0x/picomet-lang",
  "author": "vain0x",
  "license": "Unlicensed",
  "private": true,
  "main": "./out/extension",
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "engines": {
    "vscode": "^1.30.1"
  },
  "devDependencies": {
    "@types/node": "^10.12.18",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "vsce": "^1.54.0",
    "vscode": "^1.1.26",
    "vscode-languageserver-protocol": "^3.14.1"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  },
  "scripts": {
    "postinstall": "vscode-install",
    "build": "tsc -b",
    "watch": "tsc -w"
  },
  "contributes": {
    "languages": [
      {
        "id": "picomet-lang",
        "extensions": [
          ".picomet"
        ],
        "configuration": "./syntaxes/picomet-lang-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "picomet-lang",
        "scopeName": "source.picomet-lang",
        "path": "./syntaxes/picomet-lang.tmGrammar.json"
      }
    ]
  }
}